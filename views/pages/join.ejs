<!-- main body content -->
<style>
  .form-container {
    background-color: #f0f5e9;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
  }

  .form-section {
    padding: 40px;
  }

  .divider {
    display: flex;
    align-items: center;
    margin: 25px 0;
  }

  .divider-line {
    flex-grow: 1;
    height: 1px;
    background-color: #666666;
  }

  .divider-text {
    padding: 0 15px;
    color: var(--bs-primary);
    font-size: 0.8rem;
  }

  .form-control {
    border: none;
    border-bottom: 1px solid #5f5f5f;
    border-radius: 0;
    padding-left: 0;
    background-color: transparent;
    font-size: 0.8rem;
    padding-bottom: 0.1rem;
  }

  .form-control:focus {
    box-shadow: none;
    border-color: #666666;
  }

  .btn-waitlist {
    background-color: #3c6e37;
    color: white;
    border-radius: 25px;
    padding: 8px 30px;
    border: none;
  }

  .btn-waitlist:hover {
    background-color: #2c5128;
    color: white;
  }

  .password-container {
    position: relative;
  }

  .password-toggle {
    position: absolute;
    right: 0;
    top: 10px;
    cursor: pointer;
    color: #6c757d;
  }
</style>
<main>
  <!-- form -->
  <section class="bg-secondary">
    <!-- header -->
    <%- include("../partials/header", { data: { page: "" } }) %>
    <div class="overlay py-5">
      <div class="container">
        <div class="row justify-content-center">
          <div class="">
            <div class="form-container">
              <div class="row g-0">
                <!-- Form Section -->
                <div class="col-md-6">
                  <div class="form-section bg-white p-5">
                    <h1 class="mb-4 text-primary roman-font text-center">Get Started</h1>
                    <form action="/join" method="POST">
                      <div class="mb-3">
                        <label for="name" class="form-label smaller text-muted mb-0" style="letter-spacing: 3px;">Name</label>
                        <input name="name" type="text" class="form-control" id="name" placeholder="Mark Norman" required>
                      </div>

                      <div class="mb-3">
                        <label for="email" class="form-label smaller text-muted mb-0" style="letter-spacing: 3px;">Email</label>
                        <input name="email" type="email" class="form-control" id="email" placeholder="info@gmail.com" required>
                      </div>
                      <div class="py-3"></div>
                      <div class="text-center mb-4">
                        <button type="submit" class="btn btn-waitlist fw-bold">Join</button>
                      </div>
                    </form>

                    <div class="divider">
                      <div class="divider-line"></div>
                      <div class="divider-text">Continue With...</div>
                      <div class="divider-line"></div>
                    </div>

                    <div class="d-flex gap-4 justify-content-center">
                      <a href="">
                        <img src="./images/google.png" alt="" height="40">
                      </a>
                      <a href="">
                        <img src="./images/facebook.png" alt="" height="40">
                      </a>
                      <a href="">
                        <img src="./images/twitter.png" alt="" height="40">
                      </a>
                      <a href="">
                        <img src="./images/linkedin.png" alt="" height="40">
                      </a>
                    </div>
                  </div>
                </div>

                <!-- Image Section -->
                <div class="col-md-6 d-none d-md-block">
                  <img class="h-100 w-100 object-fit-cover" src="./images/cta-bg.png" alt="">
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="py-5"></div>
  </section>
  <!-- form : end -->
</main>